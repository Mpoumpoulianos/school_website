(function(){
  const left = document.getElementById('sidebar-left');
  const right = document.getElementById('sidebar-right');
  const overlay = document.getElementById('overlay');
  const openLeft = document.getElementById('open-left');
  const openRight = document.getElementById('open-right');
  const hamburger = document.getElementById('hamburger');

  function closeAll(){
    left.classList.remove('open');
    right.classList.remove('open');
    overlay.classList.remove('show');
    overlay.setAttribute('aria-hidden','true');
  }
  function open(el){
    el.classList.add('open');
    overlay.classList.add('show');
    overlay.setAttribute('aria-hidden','false');
  }

  openLeft?.addEventListener('click', ()=> open(left));
  openRight?.addEventListener('click', ()=> open(right));
  overlay?.addEventListener('click', closeAll);

  hamburger?.addEventListener('click', ()=>{
    if(left.classList.contains('open')) closeAll();
    else open(left);
  });

  document.addEventListener('keydown', (e)=>{
    if(e.key === 'Escape') closeAll();
  });

  let resizeTimer;
  window.addEventListener('resize', ()=>{
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(()=>{
      if(window.matchMedia('(min-width:761px)').matches){
        left.classList.remove('open');
        right.classList.remove('open');
        overlay.classList.remove('show');
        overlay.setAttribute('aria-hidden','true');
      }
    }, 120);
  });
})();
